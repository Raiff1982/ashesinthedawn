# Codette AI Integration Environment Variables
# =============================================
# 
# Copy this file to .env.local and fill in your values
# This enables Codette AI integration in CoreLogic Studio
#

# ============================================================================
# CODETTE BACKEND CONFIGURATION
# ============================================================================

# FastAPI Server URL
# Default: http://localhost:8000
# Production: https://your-domain.com/codette
VITE_CODETTE_API=http://localhost:8000

# Enable/Disable Codette Integration
# Set to true to enable all Codette features
VITE_CODETTE_ENABLED=true

# Optional: API Key for Codette Backend
# If your backend requires authentication, add API key here
# VITE_CODETTE_API_KEY=your_api_key_here

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# Server Host (what interface to bind to)
# Default: 0.0.0.0 (all interfaces)
# Docker: 0.0.0.0
# Local only: 127.0.0.1
CODETTE_HOST=0.0.0.0

# Server Port
# Default: 8000
# Must be unique if running multiple services
CODETTE_PORT=8000

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable WebSocket real-time support
# Set to true for real-time suggestions and transport control
VITE_CODETTE_WEBSOCKET_ENABLED=true

# Enable Message Caching
# Speeds up responses for repeated queries
VITE_CODETTE_CACHE_ENABLED=true

# Enable Auto-Reconnect on Backend Disconnect
# Automatically attempts to reconnect if server goes down
VITE_CODETTE_AUTO_RECONNECT=true

# ============================================================================
# ADVANCED CONFIGURATION
# ============================================================================

# Max conversation history to keep in memory
# Default: 100 messages
# Lower = less memory, less context available
VITE_CODETTE_MAX_HISTORY=100

# Response cache size (number of cached responses)
# Default: 500
# Increase for better performance on repeated queries
VITE_CODETTE_CACHE_SIZE=500

# Request timeout in milliseconds
# Default: 30000 (30 seconds)
# Increase if backend is slow
VITE_CODETTE_TIMEOUT=30000

# Auto-reconnect attempts before giving up
# Default: 5
# Increase for unstable networks
VITE_CODETTE_MAX_RECONNECT_ATTEMPTS=5

# ============================================================================
# ANALYSIS CONFIGURATION
# ============================================================================

# Default analysis mode when Codette analyzes audio
# Options: "general", "detailed", "quick"
VITE_CODETTE_ANALYSIS_MODE=general

# Audio analysis sample rate
# Default: 48000 Hz
VITE_CODETTE_SAMPLE_RATE=48000

# Enable real-time audio analysis during playback
VITE_CODETTE_REALTIME_ANALYSIS=false

# ============================================================================
# SUGGESTION CONFIGURATION
# ============================================================================

# Minimum confidence threshold for suggestions (0-1)
# Default: 0.75 (75%)
# Higher = only show high-confidence suggestions
VITE_CODETTE_MIN_CONFIDENCE=0.75

# Number of suggestions to return by default
# Default: 5
VITE_CODETTE_DEFAULT_SUGGESTION_LIMIT=5

# Enable automatic suggestion application
# CAUTION: When true, Codette applies changes without asking
# Set to false for manual review before applying
VITE_CODETTE_AUTO_APPLY=false

# ============================================================================
# PERSPECTIVES CONFIGURATION
# ============================================================================

# Default perspective to use
# Options: general, newtonian, davinci, neural, quantum
VITE_CODETTE_DEFAULT_PERSPECTIVE=general

# Enable multi-perspective analysis
# When true, Codette provides responses from multiple angles
VITE_CODETTE_MULTI_PERSPECTIVE=true

# Active perspectives (comma-separated)
# All available: newtonian_logic, davinci_synthesis, human_intuition, neural_network, quantum_logic, resilient_kindness, mathematical_rigor, philosophical, copilot_developer, bias_mitigation, psychological
VITE_CODETTE_ACTIVE_PERSPECTIVES=newtonian_logic,davinci_synthesis,neural_network

# ============================================================================
# LOGGING & DEBUG
# ============================================================================

# Debug mode (verbose logging)
# Set to true to see detailed logs in console
VITE_CODETTE_DEBUG=false

# Enable performance metrics
# Tracks response times and resource usage
VITE_CODETTE_METRICS_ENABLED=true

# Log level: off, error, warn, info, debug
VITE_CODETTE_LOG_LEVEL=info

# ============================================================================
# DEPLOYMENT CONFIGURATION
# ============================================================================

# Environment: development, staging, production
VITE_CODETTE_ENV=development

# CORS allowed origins (comma-separated)
# For production, restrict to your domain
# Development: * (all origins)
VITE_CODETTE_CORS_ORIGINS=*

# Enable HTTPS only (production)
# Set to true if backend is HTTPS
VITE_CODETTE_HTTPS_ONLY=false

# ============================================================================
# EXAMPLE CONFIGURATIONS
# ============================================================================

# LOCAL DEVELOPMENT (Default)
# VITE_CODETTE_API=http://localhost:8000
# VITE_CODETTE_ENABLED=true
# VITE_CODETTE_DEBUG=false
# CODETTE_HOST=0.0.0.0
# CODETTE_PORT=8000

# DOCKER DEVELOPMENT
# VITE_CODETTE_API=http://codette-server:8000
# VITE_CODETTE_ENABLED=true
# CODETTE_HOST=0.0.0.0
# CODETTE_PORT=8000

# PRODUCTION
# VITE_CODETTE_API=https://api.yourdomain.com/codette
# VITE_CODETTE_ENABLED=true
# VITE_CODETTE_API_KEY=your_secure_api_key
# VITE_CODETTE_AUTO_APPLY=false
# VITE_CODETTE_CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
# VITE_CODETTE_HTTPS_ONLY=true
# CODETTE_HOST=0.0.0.0
# CODETTE_PORT=8000

# ============================================================================
# NOTES
# ============================================================================

# 1. Copy this file to .env.local to use it
# 2. VITE_ prefix means the variable is accessible in frontend (React)
# 3. Non-prefixed variables are backend-only
# 4. Restart both frontend and backend after changing .env files
# 5. Never commit API keys or sensitive data to version control
# 6. For Docker, use environment variables instead of .env files

# ============================================================================
# QUICK START
# ============================================================================

# To use Codette AI:
# 1. Ensure VITE_CODETTE_ENABLED=true
# 2. Start backend: python codette_server_production.py
# 3. Verify health: curl http://localhost:8000/health
# 4. Start frontend: npm run dev
# 5. Open http://localhost:5173 in browser
# 6. Look for purple "Codette" button in TopBar
# 7. Click to open Codette AI panel!

# ============================================================================
