{
  "version": 3,
  "vendor": {
    "microsoft.com/VisualStudioSettings/CMake/1.0": {}
  },
  "configurePresets": [
    {
      "name": "windows-x64-debug",
      "displayName": "Windows x64 Debug",
      "description": "Debug configuration for Windows x64 - Ninja generator with XLA runtime compilation",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
        "CMAKE_CXX_STANDARD": "17",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON"
      },
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "windows-x64-release",
      "displayName": "Windows x64 Release",
      "description": "Release configuration for Windows x64 - Ninja generator with XLA runtime compilation",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
        "CMAKE_CXX_STANDARD": "17",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON"
      },
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-x64-debug",
      "configurePreset": "windows-x64-debug",
      "description": "Build Debug configuration",
      "jobs": 0
    },
    {
      "name": "windows-x64-release",
      "configurePreset": "windows-x64-release",
      "description": "Build Release configuration",
      "jobs": 0
    }
  ],
  "testPresets": [
    {
      "name": "windows-x64-debug",
      "configurePreset": "windows-x64-debug",
      "description": "Run tests with Debug configuration",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "windows-x64-release",
      "configurePreset": "windows-x64-release",
      "description": "Run tests with Release configuration",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}