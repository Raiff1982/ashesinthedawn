/**
 * SEND LEVEL CONTROL
 * Manage auxiliary sends with pre/post fader options
 */

import { useState } from 'react';
import { Send, Mic2, Power } from 'lucide-react';
import { Tooltip } from './TooltipProvider';

interface SendInfo {
  id: string;
  auxTrackId: string;
  auxTrackName: string;
  level: number; // dB
  pan: number; // -1 to +1
  prePost: 'pre' | 'post';
  muted: boolean;
}

interface SendLevelControlProps {
  sends?: SendInfo[];
  availableAuxTracks?: Array<{ id: string; name: string }>;
  onSendChange?: (sends: SendInfo[]) => void;
  onAddSend?: (auxTrackId: string) => void;
  onRemoveSend?: (sendId: string) => void;
}

export function SendLevelControl({
  sends = [],
  availableAuxTracks = [],
  onSendChange,
  onAddSend,
  onRemoveSend,
}: SendLevelControlProps) {
  const [isAddingMenu, setIsAddingMenu] = useState(false);

  const handleSendLevelChange = (index: number, newLevel: number) => {
    const newSends = [...sends];
    newSends[index] = { ...newSends[index], level: newLevel };
    onSendChange?.(newSends);
  };

  const handlePanChange = (index: number, newPan: number) => {
    const newSends = [...sends];
    newSends[index] = { ...newSends[index], pan: newPan };
    onSendChange?.(newSends);
  };

  const handlePrePostToggle = (index: number) => {
    const newSends = [...sends];
    newSends[index] = {
      ...newSends[index],
      prePost: newSends[index].prePost === 'pre' ? 'post' : 'pre',
    };
    onSendChange?.(newSends);
  };

  const handleMuteToggle = (index: number) => {
    const newSends = [...sends];
    newSends[index] = { ...newSends[index], muted: !newSends[index].muted };
    onSendChange?.(newSends);
  };

  return (
    <div className="space-y-2 p-3 bg-gray-800 rounded-lg border border-gray-700">
      <div className="flex items-center justify-between mb-2">
        <label className="text-xs font-semibold text-gray-400 flex items-center gap-1">
          <Send className="w-3 h-3" />
          AUXILIARY SENDS
        </label>
        <span className="text-xs text-gray-500">{sends.length} send(s)</span>
      </div>

      {/* Sends List */}
      <div className="space-y-2 max-h-48 overflow-y-auto">
        {sends.length === 0 ? (
          <div className="text-xs text-gray-500 text-center py-4 italic">
            No sends. Add one below.
          </div>
        ) : (
          sends.map((send, idx) => (
            <Tooltip
              key={send.id}
              content={{
                title: `Send to ${send.auxTrackName}`,
                description: `Route this track's signal to ${send.auxTrackName}. ${send.prePost === 'pre' ? 'Pre-fader' : 'Post-fader'} signal.`,
                category: 'mixer',
                relatedFunctions: ['Bus Routing', 'Parallel Compression', 'Effect Send'],
                performanceTip: `Use pre-fader sends for reverb/delay to preserve original timing. Post-fader for mixing buses.`,
                examples: [
                  'Reverb send: Pre-fader, -15dB',
                  'Parallel compression: Post-fader, -6dB',
                  'Headphone mix: Pre-fader for independent monitoring',
                ],
              }}
              position="top"
            >
              <div className="space-y-1 p-2 bg-gray-900 rounded border border-gray-700">
                {/* Header */}
                <div className="flex items-center justify-between gap-1">
                  <div className="flex-1 min-w-0">
                    <div className="text-xs font-semibold text-gray-300 truncate">
                      ? {send.auxTrackName}
                    </div>
                  </div>

                  {/* Pre/Post Toggle */}
                  <button
                    onClick={() => handlePrePostToggle(idx)}
                    className={`px-1.5 py-0.5 text-xs rounded font-mono transition-colors ${
                      send.prePost === 'pre'
                        ? 'bg-teal-600 text-white'
                        : 'bg-purple-600 text-white'
                    }`}
                  >
                    {send.prePost.toUpperCase()}
                  </button>

                  {/* Mute Button */}
                  <button
                    onClick={() => handleMuteToggle(idx)}
                    className={`p-1 rounded transition-colors ${
                      send.muted
                        ? 'bg-red-600 text-white'
                        : 'bg-gray-700 text-gray-400 hover:bg-gray-600'
                    }`}
                  >
                    <Power className="w-3 h-3" />
                  </button>

                  {/* Delete Button */}
                  <button
                    onClick={() => onRemoveSend?.(send.id)}
                    className="px-1.5 py-0.5 text-xs bg-red-900 text-red-300 hover:bg-red-700 rounded transition"
                  >
                    ?
                  </button>
                </div>

                {/* Level & Pan Sliders */}
                <div className="space-y-1">
                  {/* Level */}
                  <div className="flex items-center gap-2">
                    <span className="text-xs text-gray-500 w-8">Level</span>
                    <input
                      type="range"
                      min="-60"
                      max="6"
                      step="1"
                      value={send.level}
                      onChange={(e) => handleSendLevelChange(idx, parseFloat(e.target.value))}
                      className="flex-1 h-1.5 bg-gray-700 rounded-lg appearance-none cursor-pointer"
                    />
                    <span className="text-xs font-mono text-gray-400 w-10 text-right">
                      {send.level.toFixed(0)} dB
                    </span>
                  </div>

                  {/* Pan */}
                  <div className="flex items-center gap-2">
                    <span className="text-xs text-gray-500 w-8">Pan</span>
                    <input
                      type="range"
                      min="-1"
                      max="1"
                      step="0.1"
                      value={send.pan}
                      onChange={(e) => handlePanChange(idx, parseFloat(e.target.value))}
                      className="flex-1 h-1.5 bg-gray-700 rounded-lg appearance-none cursor-pointer"
                    />
                    <span className="text-xs font-mono text-gray-400 w-10 text-right">
                      {send.pan > 0 ? 'R' : send.pan < 0 ? 'L' : 'C'}
                      {Math.abs(send.pan).toFixed(1)}
                    </span>
                  </div>
                </div>
              </div>
            </Tooltip>
          ))
        )}
      </div>

      {/* Add Send Button */}
      <div className="relative">
        <button
          onClick={() => setIsAddingMenu(!isAddingMenu)}
          className="w-full px-2 py-1 text-xs bg-teal-600 hover:bg-teal-700 text-white rounded font-semibold transition flex items-center justify-center gap-1"
        >
          <Send className="w-3 h-3" />
          Add Send
        </button>

        {/* Aux Track Selection Menu */}
        {isAddingMenu && (
          <div className="absolute top-full mt-1 left-0 right-0 bg-gray-900 border border-gray-600 rounded shadow-lg z-50 max-h-40 overflow-y-auto">
            {availableAuxTracks.length === 0 ? (
              <div className="px-2 py-2 text-xs text-gray-500 text-center">
                No auxiliary buses available
              </div>
            ) : (
              availableAuxTracks.map((auxTrack) => (
                <button
                  key={auxTrack.id}
                  onClick={() => {
                    onAddSend?.(auxTrack.id);
                    setIsAddingMenu(false);
                  }}
                  className="w-full text-left px-2 py-1.5 text-xs text-gray-300 hover:bg-gray-700 hover:text-white transition flex items-center gap-2 first:rounded-t last:rounded-b"
                >
                  <Mic2 className="w-3 h-3 flex-shrink-0" />
                  <span className="truncate">{auxTrack.name}</span>
                </button>
              ))
            )}
          </div>
        )}
      </div>

      {/* Info tip */}
      <div className="text-xs text-gray-500 bg-gray-900 p-2 rounded border border-gray-700 italic">
        ?? Tip: Pre-fader sends route the original signal (good for reverb). Post-fader sends route after
        the fader (good for buses).
      </div>
    </div>
  );
}
