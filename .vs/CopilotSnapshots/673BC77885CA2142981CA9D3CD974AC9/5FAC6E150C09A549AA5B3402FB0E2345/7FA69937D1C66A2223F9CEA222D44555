/**
 * RECORDING CONTROLS
 * Main recording control interface with arm, record, and mode selection
 */

import { Mic, Square, Radio } from 'lucide-react';
import { Track } from '../types';
import { Tooltip } from './TooltipProvider';

interface RecordingControlsProps {
  selectedTrack: Track | null;
  isRecording: boolean;
  isArmed: boolean;
  recordingTime: number;
  onArm: (armed: boolean) => void;
  onRecord: () => void;
  onStop: () => void;
  recordingMode: 'audio' | 'midi' | 'overdub';
  onModeChange: (mode: 'audio' | 'midi' | 'overdub') => void;
}

export function RecordingControls({
  selectedTrack,
  isRecording,
  isArmed,
  recordingTime,
  onArm,
  onRecord,
  onStop,
  recordingMode,
  onModeChange,
}: RecordingControlsProps) {
  const formatTime = (seconds: number): string => {
    const mins = Math.floor(seconds / 60);
    const secs = Math.floor(seconds % 60);
    const ms = Math.floor((seconds % 1) * 100);
    return `${mins.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}.${ms.toString().padStart(2, '0')}`;
  };

  if (!selectedTrack) {
    return (
      <div className="p-4 text-gray-500 text-sm border-t border-gray-700 bg-gray-800">
        Select a track to enable recording
      </div>
    );
  }

  return (
    <div className={`p-4 space-y-4 border-t-2 transition-colors ${

      isRecording
        ? 'bg-red-950 border-red-600 animate-pulse'
        : isArmed
          ? 'bg-red-900/30 border-red-700'
          : 'bg-gray-800 border-gray-700'
    }`}>
      {/* Track Info */}
      <div className="flex items-center justify-between">
        <div className="flex items-center gap-2">
          <div className={`w-3 h-3 rounded-full ${
            isRecording ? 'bg-red-500 animate-pulse' : isArmed ? 'bg-red-600' : 'bg-gray-600'
          }`} />
          <span className="font-semibold text-gray-300">{selectedTrack.name}</span>
        </div>
        {isRecording && (
          <span className="text-sm font-mono text-red-300">{formatTime(recordingTime)}</span>
        )}
      </div>

      {/* Recording Controls */}
      <div className="flex gap-2">
        {/* Arm Button */}
        <Tooltip content={{ title: 'Arm Track', description: 'Enable recording on this track' }}>
          <button
            onClick={() => onArm(!isArmed)}
            disabled={isRecording}
            className={`px-4 py-2 rounded font-medium transition-colors flex items-center gap-2 ${
              isArmed
                ? 'bg-red-600 hover:bg-red-700 text-white'
                : 'bg-gray-700 hover:bg-gray-600 text-gray-300'
            } disabled:opacity-50`}
          >
            <Mic className="w-4 h-4" />
            {isArmed ? 'Armed' : 'Arm'}
          </button>
        </Tooltip>

        {/* Record/Stop Button */}
        <Tooltip content={{ title: 'Record', description: 'Start recording audio' }}>
          <button
            onClick={isRecording ? onStop : onRecord}
            disabled={!isArmed && !isRecording}
            className={`px-4 py-2 rounded font-medium transition-colors flex items-center gap-2 ${
              isRecording
                ? 'bg-red-600 hover:bg-red-700 text-white'
                : 'bg-blue-600 hover:bg-blue-700 text-white disabled:opacity-50'
            }`}
          >
            {isRecording ? (
              <>
                <Square className="w-4 h-4 fill-current" />
                Stop
              </>
            ) : (
              <>
                <Radio className="w-4 h-4" />
                Record
              </>
            )}
          </button>
        </Tooltip>
      </div>

      {/* Mode Selector */}
      <div className="space-y-2">
        <label className="text-xs font-semibold text-gray-400">Recording Mode</label>
        <div className="grid grid-cols-3 gap-2">
          {['audio', 'midi', 'overdub'].map((mode) => (
            <button
              key={mode}
              onClick={() => onModeChange(mode as 'audio' | 'midi' | 'overdub')}
              disabled={isRecording}
              className={`px-2 py-1 text-xs rounded font-medium transition-colors capitalize ${
                recordingMode === mode
                  ? 'bg-blue-600 text-white'
                  : 'bg-gray-700 text-gray-300 hover:bg-gray-600'
              } disabled:opacity-50`}
            >
              {mode}
            </button>
          ))}
        </div>
      </div>

      {/* Status */}
      <div className="text-xs text-gray-400 bg-gray-900 rounded p-2">
        <div className="flex justify-between">
          <span>Status:</span>
          <span className={isRecording ? 'text-red-400' : isArmed ? 'text-yellow-400' : 'text-gray-500'}>
            {isRecording ? 'Recording' : isArmed ? 'Armed & Ready' : 'Idle'}
          </span>
        </div>
      </div>

      {/* Info */}
      <div className="text-xs text-gray-500 border-t border-gray-700 pt-2">
        🎙️ <strong>Tip:</strong> Arm the track, then press Record or Play to start. For MIDI, use the piano roll.
      </div>
    </div>
  );
}
