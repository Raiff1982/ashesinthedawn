[pytest]
# pytest configuration for ashesinthedawn project

# Python path - add Codette/src for imports
# This ensures imports like "from utils.response_verifier import ResponseVerifier" work
pythonpath = 
    Codette/src
    .

# Test discovery patterns
python_files = test_*.py
python_classes = Test*
python_functions = test_*

# Logging
log_cli = true
log_cli_level = INFO
log_cli_format = %(asctime)s [%(levelname)8s] %(message)s
log_cli_date_format = %Y-%m-%d %H:%M:%S

# Markers for categorizing tests
markers =
    unit: Unit tests (quick, no dependencies)
    integration: Integration tests (may require services)
    slow: Slow tests (>1 second)
    codette: Codette AI engine tests
    response: Response processing tests
    grounding: Grounding truth verification tests
    auth: Authentication tests

# Minimum Python version
minversion = 7.0

# Show extra summary info
addopts = 
    -ra
    --strict-markers
    --tb=short
    --disable-warnings

# Timeout for tests (seconds)
timeout = 30
