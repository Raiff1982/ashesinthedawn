/**
 * ENHANCEMENT #6: Breadcrumb Navigation
 * Shows current location in UI hierarchy
 */

import React from 'react';
import { ChevronRight, Folder, Music } from 'lucide-react';
import { useDAW } from '../contexts/DAWContext';

interface BreadcrumbItem {
  label: string;
  icon?: React.ReactNode;
  onClick?: () => void;
}

export function BreadcrumbNavigation() {
  const daw = useDAW();
  const track = daw?.selectedTrack;

  const items: BreadcrumbItem[] = [
    { label: 'Projects', icon: <Folder className="w-3 h-3" /> },
  ];

  if (track && track.type === 'audio') {
    items.push({
      label: `Track: ${track.name}`,
      icon: <Music className="w-3 h-3" />,
    });
  }

  return (
    <nav className="flex items-center gap-1 px-3 py-2 text-xs text-gray-400 bg-gray-800 rounded border border-gray-700">
      {items.map((item, idx) => (
        <React.Fragment key={idx}>
          <div className="flex items-center gap-1">
            {item.icon}
            <span className="hover:text-gray-300 transition cursor-pointer">{item.label}</span>
          </div>
          {idx < items.length - 1 && <ChevronRight className="w-3 h-3 text-gray-600" />}
        </React.Fragment>
      ))}
    </nav>
  );
}
