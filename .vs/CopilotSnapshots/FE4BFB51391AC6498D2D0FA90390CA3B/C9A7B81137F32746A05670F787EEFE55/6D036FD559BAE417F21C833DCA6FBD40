/**
 * RECORDING STATUS
 * Display recording status, time elapsed, and take count
 */

import { Radio, CheckCircle } from 'lucide-react';

interface RecordingStatusProps {
  isRecording: boolean;
  recordingTime: number;
  recordingTakeCount: number;
  punchInTime?: number;
  punchOutTime?: number;
  punchEnabled?: boolean;
}

export function RecordingStatus({
  isRecording,
  recordingTime,
  recordingTakeCount,
  punchInTime,
  punchOutTime,
  punchEnabled = false,
}: RecordingStatusProps) {
  const formatTime = (seconds: number): string => {
    const mins = Math.floor(seconds / 60);
    const secs = Math.floor(seconds % 60);
    const ms = Math.floor((seconds % 1) * 100);
    return `${mins.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}.${ms.toString().padStart(2, '0')}`;
  };

  return (
    <div className={`p-4 rounded-lg border-2 transition-colors ${
      isRecording
        ? 'bg-red-950 border-red-600'
        : 'bg-gray-800 border-gray-700'
    }`}>
      {/* Main Status */}
      <div className="flex items-center justify-between mb-3">
        <div className="flex items-center gap-2">
          <div className={`flex items-center gap-2 ${isRecording ? 'animate-pulse' : ''}`}>
            {isRecording ? (
              <>
                <Radio className="w-5 h-5 text-red-500" />
                <span className="font-semibold text-red-400">Recording</span>
              </>
            ) : (
              <>
                <CheckCircle className="w-5 h-5 text-green-500" />
                <span className="font-semibold text-gray-300">Ready</span>
              </>
            )}
          </div>
        </div>
        <span className="text-sm text-gray-500">Take {recordingTakeCount}</span>
      </div>

      {/* Time Display */}
      <div className="text-center mb-3">
        <div className="text-4xl font-mono font-bold text-white">
          {formatTime(recordingTime)}
        </div>
      </div>

      {/* Punch Info */}
      {punchEnabled && (punchInTime !== undefined || punchOutTime !== undefined) && (
        <div className="bg-gray-900 rounded p-3 mb-3 space-y-1 text-xs">
          <div className="text-gray-400">Punch In/Out Enabled</div>
          {punchInTime !== undefined && (
            <div className="flex justify-between">
              <span className="text-gray-500">In:</span>
              <span className="text-gray-300 font-mono">{formatTime(punchInTime)}</span>
            </div>
          )}
          {punchOutTime !== undefined && (
            <div className="flex justify-between">
              <span className="text-gray-500">Out:</span>
              <span className="text-gray-300 font-mono">{formatTime(punchOutTime)}</span>
            </div>
          )}
        </div>
      )}

      {/* Recording Indicators */}
      <div className="space-y-2">
        {isRecording && (
          <div className="flex items-center gap-2 text-xs text-red-400">
            <div className="w-2 h-2 bg-red-500 rounded-full animate-pulse" />
            <span>Recording in progress...</span>
          </div>
        )}

        <div className="text-xs text-gray-500 flex justify-between">
          <span>Buffer: {(recordingTime / 60).toFixed(1)} min max</span>
          <span>Safe</span>
        </div>
      </div>
    </div>
  );
}
