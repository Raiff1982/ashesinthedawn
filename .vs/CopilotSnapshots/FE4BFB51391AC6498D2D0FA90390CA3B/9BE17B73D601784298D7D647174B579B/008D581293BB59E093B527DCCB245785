/**
 * QUANTIZE & HUMANIZE CONTROLS
 * Grid quantization and timing humanization tools
 */

import { useState } from 'react';
import { MIDINote } from '../types/midi';
import { quantizeNotes, humanizeNotes } from '../lib/midiUtils';

interface QuantizeHumanizeProps {
  notes: MIDINote[];
  onNotesChange: (notes: MIDINote[]) => void;
  bpm: number;
}

export function QuantizeHumanize({ notes, onNotesChange, bpm }: QuantizeHumanizeProps) {
  const [humanizeAmount, setHumanizeAmount] = useState<number>(0);

  const handleQuantize = (quantizeValue: number) => {
    const quantized = quantizeNotes(notes, quantizeValue, bpm);
    onNotesChange(quantized);
  };

  const handleHumanize = (amount: number) => {
    setHumanizeAmount(amount);
    if (amount === 0) {
      onNotesChange(notes);
    } else {
      const humanized = humanizeNotes(notes, amount);
      onNotesChange(humanized);
    }
  };

  return (
    <div className="p-4 space-y-4 bg-gray-800 border-t border-gray-700">
      {/* Quantize Section */}
      <div>
        <label className="text-xs font-semibold text-gray-300 block mb-3">Quantize Grid</label>
        <div className="grid grid-cols-4 gap-2">
          {[
            { value: 4, label: '1/4' },
            { value: 8, label: '1/8' },
            { value: 16, label: '1/16' },
            { value: 32, label: '1/32' },
          ].map(({ value, label }) => (
            <button
              key={value}
              onClick={() => handleQuantize(value)}
              className="px-2 py-2 text-xs font-medium bg-blue-600 hover:bg-blue-700 active:bg-blue-800 rounded transition-colors"
              title={`Quantize to ${label} notes`}
            >
              {label}
            </button>
          ))}
        </div>
      </div>

      {/* Humanize Section */}
      <div className="border-t border-gray-700 pt-4">
        <div className="flex justify-between items-center mb-3">
          <label className="text-xs font-semibold text-gray-300">Humanize Timing</label>
          <span className="text-xs text-gray-400">
            {(humanizeAmount * 1000).toFixed(0)}ms
          </span>
        </div>
        <input
          type="range"
          min="0"
          max="0.2"
          step="0.01"
          value={humanizeAmount}
          onChange={(e) => handleHumanize(parseFloat(e.target.value))}
          className="w-full h-2 bg-gray-700 rounded-lg appearance-none cursor-pointer accent-purple-600"
        />
        <div className="flex justify-between text-xs text-gray-500 mt-1">
          <span>None</span>
          <span>Max</span>
        </div>
        {humanizeAmount > 0 && (
          <p className="text-xs text-gray-400 mt-3">
            Adding ±{(humanizeAmount * 1000).toFixed(0)}ms timing variation to notes
          </p>
        )}
      </div>

      {/* Info */}
      <div className="bg-gray-900 border border-gray-700 rounded p-3 mt-4">
        <p className="text-xs text-gray-400">
          <strong>Tip:</strong> Use quantize to snap notes to the grid. Use humanize to add natural timing variation.
        </p>
      </div>
    </div>
  );
}
